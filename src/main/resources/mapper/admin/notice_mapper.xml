<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC   "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>

<mapper namespace="com.fitmate.admin.dao.NoticeDAO">

    <!-- 공지사항 목록 -->
    <select id="allCount" resultType="int">
        SELECT CEIL(COUNT(notice_idx) / #{param1}) FROM notice
    </select>

    <select id="countIdx" resultType="int">
        SELECT COUNT(notice_idx) FROM notice
    </select>

    <select id="list" resultType="com.fitmate.admin.dto.NoticeDTO">
        SELECT notice_cont, notice_regdate, (SELECT admin_name FROM admin a WHERE a.admin_idx = admin_idx) AS 'admin_name', notice_show
        FROM notice ORDER BY notice_idx DESC LIMIT #{param1} OFFSET #{param2}
    </select>

    <!-- 공지사항 작성 -->
    <insert id="write">
        INSERT INTO notice (notice_cont, admin_idx) VALUES (#{param1}, #{param2});
    </insert>

</mapper>